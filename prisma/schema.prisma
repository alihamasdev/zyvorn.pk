generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
}

model Product {
  id              Int         @id @default(autoincrement())
  title           String
  slug            String      @unique
  images          String[]
  stock           Int?        @default(0)
  orignalPrice    Int         @map("orignal_price")
  discountedPrice Int?        @map("discounted_price")
  createdAt       DateTime    @default(now()) @map("created_at")
  categoryId      Int         @map("category_id")
  Category        Category    @relation(fields: [categoryId], references: [id])
  Reviews         Review[]
  Variations      Variation[]
  OrderItems      OrderItem[]

  @@index([id, slug, categoryId])
  @@map("products")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique
  Products Product[]

  @@index([id])
  @@map("categories")
}

model Review {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Int
  comment   String?
  createdAt DateTime @default(now()) @map("created_at")
  productId Int      @map("product_id")
  Product   Product  @relation(fields: [productId], references: [id])

  @@index([id, productId])
  @@map("reviews")
}

model Variation {
  id               Int               @id @default(autoincrement())
  name             String
  productId        Int               @map("product_id")
  Product          Product           @relation(fields: [productId], references: [id])
  VariationOptions VariationOption[]

  @@index([id, productId])
  @@map("variations")
}

model VariationOption {
  id            Int         @id @default(autoincrement())
  value         String
  stock         Int         @default(0)
  variationId   Int         @map("variation_id")
  VariationType Variation   @relation(fields: [variationId], references: [id])
  OrderItems    OrderItem[]

  @@index([id, variationId])
  @@map("variation_options")
}

model Order {
  id         Int         @id @default(autoincrement())
  name       String
  phone      Int
  email      String
  address    String
  province   String      @default("punjab")
  city       String
  zipCode    Int         @map("zip_code")
  status     OrderStatus @default(PENDING)
  amount     Int
  createdAt  DateTime    @default(now()) @map("created_at")
  OrderItems OrderItem[]

  @@index([id, status])
  @@map("orders")
}

model OrderItem {
  id                Int              @id @default(autoincrement())
  orderId           Int              @map("order_id")
  order             Order            @relation(fields: [orderId], references: [id])
  productId         Int              @map("product_id")
  Product           Product          @relation(fields: [productId], references: [id])
  variationOptionId Int?             @map("variation_option_id")
  variationOption   VariationOption? @relation(fields: [variationOptionId], references: [id])

  @@index([id, orderId, productId])
  @@map("order_items")
}
